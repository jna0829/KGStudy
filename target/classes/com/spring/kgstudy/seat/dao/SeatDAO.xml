<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.kgstudy.seat.dao.SeatDAO">




<select id="findSeat" resultType="com.spring.kgstudy.seat.vo.SeatVO" >
	SELECT * FROM seat WHERE store_id=#{storeId}
</select>



<insert id="insertSeat">

	INSERT INTO seat VALUES(seat_seq.nextval,#{seatName},#{storeId},#{userId},#{seatType},#{x},#{y})

</insert>


<select id="findSeatBySeatId" resultType="int" >
	SELECT count(*) FROM seat WHERE seat_id=#{seatId}
</select>

<update id="updateSeat">
	UPDATE seat SET  
	<if test="#{x}!=null">
	seat_name=#{seatName},  x=#{x}, y=#{y},
	</if>
	
	user_id=#{userId},  seat_type=#{seatType} WHERE seat_id=#{seatId}
</update>








</mapper>